@model IEnumerable<AtividadeViewModel>

@{
    ViewData["Title"] = "Atividade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Atividades</h2>

<p>
    <a asp-action="Create" class="btn btn-dark" role="button">Nova Atividade</a>
</p>
@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Descrição
                </th>
                <th>
                    Cadastro
                </th>
                <th>
                    Atualização
                </th>
                <th>
                    Cadastrado por
                </th>
                <th>
                    Atualizado por
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataCadastro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataModificacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeUsuarioCadastro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeUsuarioModificacao)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
